<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.socialweather.DetailsActivity">

    <android.support.constraint.Guideline
        android:id="@+id/details_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/details_location_image"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:src="@drawable/profile_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/details_dark_background"
        app:layout_constraintRight_toLeftOf="@+id/details_guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/details_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Minneapolis, MN"
        android:textColor="@color/textPrimary"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/details_dark_background"
        app:layout_constraintLeft_toRightOf="@+id/details_guideline"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"/>

    <View
        android:id="@+id/details_dark_background"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimaryLight" />

    <LinearLayout
        android:id="@+id/details_weather_icon_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/details_weather_temperature"
        app:layout_constraintBottom_toBottomOf="@+id/details_weather_temperature"
        app:layout_constraintLeft_toRightOf="@+id/details_guideline"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/details_weather_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            tools:src="@drawable/fog_color"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/details_weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Foggy"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/details_weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/details_dark_background"
        app:layout_constraintBottom_toBottomOf="@+id/details_dark_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/details_guideline"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/details_current_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13°"
            android:textColor="@android:color/white"
            android:textSize="72sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/details_minmax_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12° / 18°"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/details_weather_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/details_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/details_guideline"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/details_pressure_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_pressure_label"
            android:textColor="@color/textPrimary"
            android:textSize="28sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/details_humidity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_humidity_label"
            android:textColor="@color/textPrimary"
            android:textSize="28sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/details_wind_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details_wind_label"
            android:textColor="@color/textPrimary"
            android:textSize="28sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/details_weather_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/details_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/details_guideline"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp">

        <TextView
            android:id="@+id/details_pressure_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1019 hPa"
            android:textColor="@color/textSecondary"
            android:textSize="28sp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/details_humidity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="89 %"
            android:textColor="@color/textSecondary"
            android:textSize="28sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/details_wind_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.1 km/h"
            android:textColor="@color/textSecondary"
            android:textSize="28sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
