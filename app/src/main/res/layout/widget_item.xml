<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_item"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/widget_profile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/profile_color"
        android:scaleType="centerCrop"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/widget_profile_content_description"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/widget_profile"
        android:layout_toEndOf="@id/widget_profile"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/widget_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Yehyun Ryu"
            android:textSize="20sp"
            android:textColor="@color/textPrimary"/>

        <TextView
            android:id="@+id/widget_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Seoul, South Korea"
            android:textSize="16sp"
            android:textColor="@color/textSecondary"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/widget_weather_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@drawable/cloudy_color"
        android:scaleType="centerCrop"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/widget_weather_icon_content_description"/>

</RelativeLayout>