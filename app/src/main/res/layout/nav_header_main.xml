<?xml version="1.0" encoding="utf-8"?>

<!-- Main Navigation Drawer Header -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_header_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_header_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/header_shade"
        android:background="@drawable/header_background"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/nav_header_profile"
            android:layout_width="@dimen/nav_profile_width"
            android:layout_height="@dimen/nav_profile_height"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:scaleType="fitStart"
            android:gravity="bottom"
            android:src="@drawable/profile_white"/>

        <TextView
            android:id="@+id/nav_header_info"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            tools:text="Yehyun Ryu"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/nav_header_location"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="@string/nav_location_default"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

    </LinearLayout>

</RelativeLayout>