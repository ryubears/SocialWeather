<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weather_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/weather_item_background_height"
>

            <ImageView
                android:id="@+id/weather_item_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/rain_background"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/weather_item_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_marginTop="@dimen/weather_item_temperature_margin_top"
                android:layout_marginEnd="@dimen/weather_item_temperature_margin_end"
                android:layout_marginRight="@dimen/weather_item_temperature_margin_end"
                tools:text="13Â°"
                android:textColor="@android:color/white"
                android:textSize="@dimen/weather_item_temperature_text_size"
                android:gravity="center"
                android:fontFamily="sans-serif-light"/>

        </FrameLayout>

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="@dimen/weather_item_content_height">

            <TextView
                android:id="@+id/weather_item_location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                tools:text="Yehyun Ryu"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/weather_item_name_text_size"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
