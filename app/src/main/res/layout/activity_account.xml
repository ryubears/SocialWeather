<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.socialweather.AccountActivity">

    <android.support.constraint.Guideline
        android:id="@+id/account_horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="0dp" />
    
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/account_horizontal_guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/account_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profile_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/account_horizontal_guideline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/account_horizontal_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/account_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_id_label"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/account_id_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1234567890"
            android:textColor="@color/textSecondary"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/account_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Name"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/account_info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Yehyun Ryu"
            android:textColor="@color/textSecondary"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/account_location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_location_label"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/account_location_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Seoul, South Korea"
            android:textColor="@color/textSecondary"
            android:textSize="20sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
